    <%= bootstrap_form_for @drug, :html => { :multipart => true } do |t| %>
    <div class="row">
        <div class="col-md-6">
        <h3 align="center"><i>Informações</i></h3>
        <br>
            <%= t.text_field :name ,:class=>"margin_field", label: "Nome" %>
            <%= t.text_field :drug_type ,:class=>"margin_field", label: "Tipo" %>
            <%= t.text_area :description ,:id => "message_area",:class=>"margin_field", label: "Descrição" %>
        </div>
        <div class="col-md-6">
            <h3 align="center"><i>Dependência</i></h3>
            <br>
            <%= t.text_field :dependence_psychological ,:class=>"margin_field", label: "Psicológica: " %>
            <%= t.text_field :dependence_phisical ,:class=>"margin_field", label: "Física: " %>
            <br>
            <h3 align="center"><i>Efeitos</i></h3>
            <br>
            <%= t.text_area :effect_high ,:class=>"margin_field", label: "Curto prazo" %>
            <%= t.text_area :long_effects ,:class=>"margin_field", label: "Longo prazo" %>
        </div>
    </div>
    <h3 align="center"><i>Informações do Quadro Resumo:</i></h3>
    <br>
    <div class="row">
        <div class="col-md-6">
            <%= t.text_field :origin ,:class=>"margin_field", label: "Origem" %>
            <%= t.text_field :average_ingest ,:class=>"margin_field", label: "Quantidade média ingerida:" %>
            <%= t.text_field :ingestion_form ,:class=>"margin_field", label: "Tipo de ingestão" %>
            <%= t.text_field :duration ,:class=>"margin_field", label: "Duração" %>
        </div>
        <div class="col-md-6">
            <%= t.text_field :tolerance ,:class=>"margin_field", label: "Tolerância" %>
            <%= t.text_field :medical_use ,:class=>"margin_field", label: "Utilização médica:" %>
            <hr>
            <%= t.file_field :avatar ,:class=>"margin_field", label: "Imagem: " %>
            <%= t.submit :salvar , {:class=>"btn btn-warning"} %>
            <%= link_to "Cancelar", :back, {:class=>"btn btn-default"} %>
        </div>
    </div>
    <%end%>
