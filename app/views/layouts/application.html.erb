<!DOCTYPE html>
<html>
<head>
  <title>SCT - <%= @page_title %></title>

<%= stylesheet_link_tag    'application', media: 'all' %>
<%= javascript_include_tag 'application' %>

</head>
<body background='<%=image_path "black.jpg"%>'>
    <nav id= "main_menu" class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home">
                    <img id="logo" alt="SCT">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse navbar-menubuilder">
                <ul id= "main_menu_list" class="nav navbar-nav navbar-right">
                    <li><a href="/home">HOME</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">CAD<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/campanhas" id="cad_index">VISUALIZAR CAMPANHA</a></li>
                                <li><a href="/campanhas/nova" id="cad_new">NOVA CAMPANHA</a></li>
                            </ul>
                    </li>
                    <li><a href="/drogas">DROGAS</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">CLINICAS<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/clinics">PROCURAR CLINICAS</a></li>
                                <li><a href="/users">CADASTRO DE CLINICAS</a></li>
                            </ul>
                    </li>
                    <li><a href="/depoimentos">DEPOIMENTOS</a>
                    </li>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Procure no site">
                        </div>
                            <button type="text" class="btn btn-default">BUSCAR</button>
                    </form>

                    <% if current_user %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"> <span class="glyphicon glyphicon-user" aria-hiden="true"> </span> </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="<%= users_profile_path %>">Perfil</a></li>
                                    <li><a  href="<%= logout_path %>">Logout</a></li>
                                </ul>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
<div id="jumbotron_margin" class="jumbotron">
          <div class="container">
            <%= yield %>
            </div>
        </div>
</body>
</html>

