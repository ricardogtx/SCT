<h1 class="w">Cl√≠nicas</h1>

<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :nome_cont, "Nome" %>
    <%= f.text_field :nome_cont %>
  </div>
  <div class="field">
    <%= f.label :estado_cont, "Estado" %>
    <%= f.text_field :estado_cont %>
  </div>
  <div class="field">
    <%= f.label :modalidade_cont, "Modalidade" %>
    <%= f.text_field :modalidade_cont %>
  </div>
  <div class="actions"><%= f.submit "Buscar" %></div>
<% end %>

<div class="img-responsive aspect data_background" ></div>
<table class="table table-striped w">
  <thead>
  <tr>
    <th><%= sort_link(@search, :nome, "Nome") %></th>
    <th><%= sort_link(@search, :estado, "Estado") %></th>
    <th><%= sort_link(@search, :modalidade, "Modalidade") %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @clinics.each do |clinic| %>
      <tr>
        <td><%= link_to clinic.nome, clinic %></td>
        <td><%= clinic.estado %></td>
        <td><%= clinic.modalidade %></td>

      </tr>
  <% end %>
  </tbody>
</table>

