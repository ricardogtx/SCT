<div id="container_margin" class="container">
    <center>
        <div class="container">
            <div class="row vertical-offset-100">
              <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Novo Usuário</h3>
                        <% if flash[:error] %>
                          <div class="alert alert-danger" role="alert" ><button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>Erro!<p></p></strong> <%= flash[:error] %>.
                          </div>
                        <% end %>
                     </div>
                    <div class="panel-body">
          						<%= form_for(@user) do |f| %>
          						  <%= f.text_field :name, :class=>"form-control", :placeholder=>"Nome" %>
          						  <%= f.email_field :email, :class=>"form-control", :placeholder=>"Email" %>
          						  <%= f.password_field :password, :class=>"form-control", :placeholder=>"Senha" %>
          						  <%= f.password_field :password_confirmation,:class=>"form-control", :placeholder=>"Confirma a Senha" %>
          						  <br>
          						    <%= f.submit "Enviar", :class=>"btn btn-lg btn-primary btn-block" %>
          						  <br>
            						<a href="/users" class="btn btn-lg btn-danger btn-block" role="button">Voltar</a>
          						<% end %>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </center>
</div>