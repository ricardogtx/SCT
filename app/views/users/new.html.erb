<!DOCTYPE HTML>
<html>
<head>
  <body>
    <center>
        <div class="container">
            <div class="row vertical-offset-100">
              <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Novo Usu√°rio</h3>
                     </div>
                    <div class="panel-body">
						<%= form_for(@user) do |f| %>
						  <%= f.text_field :name, :class=>"form-control", :placeholder=>"Nome" %>
						  <%= f.email_field :email, :class=>"form-control", :placeholder=>"Email" %>
						  <%= f.password_field :password, :class=>"form-control", :placeholder=>"Senha" %>
						  <%= f.password_field :password_confirmation,:class=>"form-control", :placeholder=>"Confirma a Senha" %>
						  <br>
						  <%= f.submit "Enviar", :class=>"btn btn-lg btn-primary btn-block" %>
						  <br>
  						  <a href="/users" class="btn btn-lg btn-danger btn-block" role="button">Voltar</a>
						<% end %>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </center>
  </body>
</head>
</html>